#include <stdio.h>

int main(void) {
    int size;
    printf("Enter size: ");
    scanf("%d", &size);
    for (int i = 0; i < size; ++i) {
        for (int j = 0; j < size; ++j) {
            if (j == i || j ==(size-i-1)) {
                printf("*");
            } else{
                printf("_");
            }
        }
        printf("\n");
    }
    return 0;
}

